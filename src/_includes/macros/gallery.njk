{% macro gallery(photographs,album) %}
    <div class="gallery">
        {% for entry in photographs %}
            {% if entry.album === album %}
                <div class="gallery-item-container">
                    <div class="gallery-item">
                        <a href="{{entry.src}}" target="_blank">
                            <img src="{{entry.src}}" alt="{{entry.alt}}">
                        </a>
                    </div>
                    {% if entry.caption %}
                        <div class="desc">{{entry.caption}}</div>
                    {% endif %}
                </div>
            {% endif %}
        {% endfor %}
    </div>
{% endmacro %}



  



